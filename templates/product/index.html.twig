{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="mt-3 mb-4">Products</h1>
    <div class="row">
        {% for p in products %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ p.name }}</h5>
                        <p class="card-text">{{ p.content }}</p>
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{ path('add_product_to_cart', {'id': p.id}) }}" class="btn btn-dark">Ajouter au panier</a>
                            <span class="h5 mt-auto">{{ p.price }} â‚¬</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}